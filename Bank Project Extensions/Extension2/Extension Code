struct stClientData {

	string AccountNumber = "";
	string PINCode = "";
	string Name = "";
	string Phone = "";
	double AccountBalance = 0;
	bool Delete = false;
	bool MarkToUpdate = false;
};

struct stUserData {

	string UserName = "";
	string password = "";
	int Permission = 0;
	bool MarkToDelete = false;


};

