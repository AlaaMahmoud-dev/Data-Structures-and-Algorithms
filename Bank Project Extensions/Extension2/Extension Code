void PrintUserRecord(stUserData stUser) {

	cout << "The Following are User Details :";
	cout << "\n-----------------------------------\n";
	cout << "Username    : " << stUser.UserName;
	cout << "\nPassword    : " << stUser.password;
	cout << "\nPermissions : " << stUser.Permission;
	cout << "\n-----------------------------------\n";


}

void MarkUserForDeletionByUsername(vector<stUserData>&vData,string Username){

	for (stUserData& User : vData)
	{
		if (User.UserName == Username)
			User.MarkToDelete = true;
	}


}

void DeleteUserByUsername(vector<stUserData> vData, string Username) {

	stUserData User;
	char Ask = ' ';



	if (FindUserByUsername(vData, User, Username))
	{
		if (Username == "Admin")
			cout << "\nThis is Admin User, You Cannot Delete This User!!\n";
		else
		{
			PrintUserRecord(User);
			cout << "\nAre You Sure You Want To Delete This User ?? y/n ";
			cin >> Ask;
			if (toupper(Ask) == 'Y')
			{
				MarkUserForDeletionByUsername(vData, Username);
				LoadUsersDataToFile(UsersFileName, vData);
			}
			cout << "\nDelete User Complete Successfuly\n";
			vData = LoadUsersDataFromFile(UsersFileName);
		}
	}
	else
	{
		cout << "User With Username [" << Username << "] is not Found \n";
	}

}
void ShowDeleteUserChoice() {

	ShowDeleteUserScreen();
	vector<stUserData>vData = LoadUsersDataFromFile(UsersFileName);
	string Username = ReadUsername();
	DeleteUserByUsername(vData,Username);

}

stUserData UpdateUserData(string Username) {


	stUserData User;
	User.UserName = Username;
	cout << "\nEnter Password? ";
	getline(cin >> ws, User.password);

	User.Permission = ReadPermission();
	

	return User;

}

void UpdateUserByUsername(vector<stUserData>&vData,string Username) {

	stUserData User;
	char Update = 'N';

	if (FindUserByUsername(vData, User, Username))
	{
		PrintUserRecord(User);
		cout << "\nAre You Sure You Want To Update This User?? Y/N";
		cin >> Update;
		if (toupper(Update) == 'Y')
		{
			for (stUserData& C : vData)
			{
				if (C.UserName == Username)
				{

					C = UpdateUserData(Username);
					break;
				}

			}
			LoadUsersDataToFile(UsersFileName, vData);

			cout << "\nUpdate is Complete Succesfully.\n";

		}

	}
	else
	{
		cout << "\nUser With Username (" << Username << ") is Not Found\n";
	}


}

