void ChooseMainMenuOption(enMainMenuChoose Choise) {

	


	switch (Choise)
	{
	case ShowList:
		ClientListChoice();
		break;
	case Add:
		AddClientChoise();
		break;
	case Delete:
		DeleteClientChoice();
		break;
	case Update:
		UpdateClientChoice();
		break;
	case Search:
		FindClientChoise();
		break;
	case Transaction:
		ShowTransactionMenu();
		break;

	case ManageUsers:
		ShowManageUsersMenu();
		break;
	case Logout:
		ResetScreen();
		Login();
		break;

	default:
		break;
	}
}
	

