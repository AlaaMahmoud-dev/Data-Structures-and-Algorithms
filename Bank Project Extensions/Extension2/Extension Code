	cout << "-----------------------------------------------------------\n";
	cout << "                   Add New User Screen                     \n";
	cout << "___________________________________________________________\n";

}

string ConvarteRecordToLineForUsers(stUserData User,string Sperator="#//#") {


	string sData = User.UserName + Sperator + User.password + Sperator + to_string(User.Permission);
	return sData;

}

void LoadUsersDataToFile(string FileName, vector<stUserData>vUsers) {

	fstream MyFile;
	MyFile.open(FileName, ios::out);

	if (MyFile.is_open())
	{

		string str;
		for (stUserData C : vUsers)
		{
			if (C.MarkToDelete == false)
			{
				str = ConvarteRecordToLineForUsers(C);
				MyFile << str << endl;
			}
		}
	}

	MyFile.close();



}

void AddUserToFile(string FileName, string DataLine) {

	fstream MyFile;
	MyFile.open(FileName, ios::out | ios::app);

	if (MyFile.is_open())
	{
		MyFile << DataLine << endl;
	}
	MyFile.close();


}

void AddNewUser() {

	stUserData UserData = ReadUserData();
	AddUserToFile(UsersFileName, ConvarteRecordToLineForUsers(UserData));
}

void AddUsers() {

	char Ask = 'y';

	do {
		cout << "\nAdding New User:\n";
		AddNewUser();
		cout << "\nAdding User Finished Succesfully, Do You Want To Add New User";
		cin >> Ask;

	} while (toupper(Ask) == 'Y');


}

void ShowAddUserChoice() {

	ShowAddUserScreen();
	AddUsers();


}

