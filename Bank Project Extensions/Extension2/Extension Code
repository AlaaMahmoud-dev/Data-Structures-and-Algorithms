void ShowUser(stUserData User) {


	cout << "| " << setw(15) << left << User.UserName;
	cout << "| " << setw(15) << left << User.password;
	cout << "| " << setw(10) << left << User.Permission;

}

void ShowUsersList(vector<stUserData>& vUsers) {

	cout << "\n\t\t\t\t\tShow (" << vUsers.size() << ") User(s)\n\n";


	cout << "\n_______________________________________________________";
	cout << "_________________________________________\n" << endl;

	cout << "| " << left << setw(15) << "Username";
	cout << "| " << left << setw(15) << "Password";
	cout << "| " << left << setw(10) << "Permission";

	cout << "\n_______________________________________________________";
	cout << "_________________________________________\n" << endl;



	for (stUserData& User : vUsers)
	{
		ShowUser(User);
		cout << endl;
	}
	cout << "\n_______________________________________________________";
	cout << "_________________________________________\n" << endl;

}

