	return Password;

}

vector<string>SplitString(string str, string Dilem) {

	vector<string>vString;
	string sWord = "";
	int pos = 0;

	while ((pos = str.find(Dilem)) != std::string::npos)//use find function to store space pos in pos variable //will not enter loop if not find space(delim)
	{
		sWord = str.substr(0, pos);
		if (sWord != "")
		{
			vString.push_back(sWord);
		}
		str.erase(0, pos + Dilem.length());//will delete from start of string to pos+space
	}
	if (str != "")//will print the last word in string because there is not found delim after it
	{
		vString.push_back(str);
	}
	return vString;

}

stUserData ConvarteLineDataToRecordForUsers(string sData, string Sperator = "#//#") {

	stUserData Data;
	vector<string>vData;
	vData = SplitString(sData, Sperator);

	Data.UserName = vData[0];
	Data.password = vData[1];
	Data.Permission = stoi(vData[2]);
	
	return Data;
}

vector<stUserData> LoadUsersDataFromFile(string FileName)
{
	fstream MyFile;
	vector<stUserData>vUsers;

	MyFile.open(FileName, ios::in);//read Mode

	if (MyFile.is_open())
	{
		string Line;
		stUserData Data;

		while (getline(MyFile, Line))
		{
			Data = ConvarteLineDataToRecordForUsers(Line);
			vUsers.push_back(Data);
		}
		MyFile.close();
	}

	return vUsers;

}

bool FindUserByUsernameAndPassword(vector<stUserData>vUsers, stUserData& User, string Username, string Password) {



	for (stUserData& fUser : vUsers)
	{
		if (fUser.UserName == Username&& fUser.password == Password)
		{
			User = fUser;
			return true;
		}


	}
	return false;

}


bool FindUserByUsername(vector<stUserData>vUsers, stUserData& User, string Username) {



	for (stUserData& fUser : vUsers)
	{
		if (fUser.UserName == Username)
		{
			User = fUser;
			return true;
		}


	}
	return false;

}

int ReadPermission() {

	char Ask = ' ';
	int Permission = 0;


	cout << "\nDo You want to give this user full permission?? y/n ";
	cin >> Ask;
	if (toupper(Ask) == 'Y')
	{
		return -1;
	}

	cout << "\nDo You want to give Access to :\n";
	cout << "\nShow Clients List ?? y/n ";
	cin >> Ask;
	if (toupper(Ask) == 'Y')
	{
		Permission += enMainMenuPermission::pShowList;
	}
	cout << "\n\nAdd New Client ?? y/n ";
	cin >> Ask;
	if (toupper(Ask) == 'Y')
	{
		Permission += enMainMenuPermission::pAdd;
	}
	cout << "\n\nDelete Client ?? y/n ";
	cin >> Ask;
	if (toupper(Ask) == 'Y')
	{
		Permission += enMainMenuPermission::pDelete;
	}
	cout << "\n\nUpdate Client ?? y/n ";
	cin >> Ask;
	if (toupper(Ask) == 'Y')
	{
		Permission += enMainMenuPermission::pUpdate;
	}
	cout << "\n\nFind Client ?? y/n ";
	cin >> Ask;
	if (toupper(Ask) == 'Y')
	{
		Permission += enMainMenuPermission::pSearch;
	}
	cout << "\n\nTransactions ?? y/n ";
	cin >> Ask;
	if (toupper(Ask) == 'Y')
	{
		Permission += enMainMenuPermission::pTransactios;
	}
	cout << "\n\nManage Users ?? y/n ";
	cin >> Ask;
	if (toupper(Ask) == 'Y')
	{
		Permission += enMainMenuPermission::pManageUsers;
	}

	return Permission;

}

bool isValidUsername(string FileName, string Username) {

	vector <stUserData> vUsers;
	fstream MyFile;
	MyFile.open(FileName, ios::in);//read Mode

	if (MyFile.is_open())
	{
		string Line;

		stUserData User;

		while (getline(MyFile, Line))
		{
			User = ConvarteLineDataToRecordForUsers(Line);

			if (User.UserName == Username)
			{
				MyFile.close();
				return true;
			}
		}
		MyFile.close();
	}
	return false;
}

bool isValidPassword(string FileName, string Password) {

	vector <stUserData> vUsers;
	fstream MyFile;
	MyFile.open(FileName, ios::in);//read Mode

	if (MyFile.is_open())
	{
		string Line;

		stUserData User;

		while (getline(MyFile, Line))
		{
			User = ConvarteLineDataToRecordForUsers(Line);

			if (User.password == Password)
			{
				MyFile.close();
				return true;
			}
		}
		MyFile.close();
	}
	return false;
}

stUserData ReadUserData() {

	stUserData UserData;
	UserData.UserName = ReadUsername();
	while (isValidUsername(UsersFileName,UserData.UserName))
	{

		cout << "\nUser With Username [" << UserData.UserName << "] is already exist\n";
		UserData.UserName = ReadUsername();

	}
	UserData.password = ReadPassword();
	UserData.Permission = ReadPermission();

	return UserData;

}

string JoinString(vector<string>vString, string Dilem) {

	string str;
	for (string& sWord : vString)
	{
		str += sWord + Dilem;
	}

	return str.substr(0, str.length() - Dilem.length());
}

vector<string> FillClientDataInVector(stClientData Data) {

	vector<string> vData;
	vData.push_back(Data.AccountNumber);
	vData.push_back(Data.PINCode);
	vData.push_back(Data.Name);
	vData.push_back(Data.Phone);
	//vData.push_back((to_string)Data.AccountBalance);

	return vData;
}

string GetOneLineClientData(vector<string> vData) {

	return JoinString(vData, "#//#");
}

void PrintOneLineClientData(string sData) {

	cout << "\nClient Record For Saving is:\n";
	cout << sData << endl;


}

string ConvarteRecordToLine(stClientData Data, string Sperator = "#//#") {

	string sData = "";
	sData += Data.AccountNumber + Sperator;
	sData += Data.PINCode + Sperator;
	sData += Data.Name + Sperator;
	sData += Data.Phone + Sperator;
	sData += to_string(Data.AccountBalance);

	return sData;

}

stClientData ConvarteLineDataToRecord(string sData, string Sperator = "#//#") {

	stClientData Data;
	vector<string>vData;
	vData = SplitString(sData, Sperator);

	Data.AccountNumber = vData[0];
	Data.PINCode = vData[1];
	Data.Name = vData[2];
	Data.Phone = vData[3];
	Data.AccountBalance = stod(vData[4]);

	return Data;
}

void PrintClientRecord(stClientData Data) {

	cout << "\nThe Following Are Clients Detailes:\n";
	cout << "\nAccount Number : " << Data.AccountNumber;
	cout << "\nPIN Cod        : " << Data.PINCode;
	cout << "\nName           : " << Data.Name;
	cout << "\nPhone          : " << Data.Phone;
	cout << "\nAccount Balance: " << Data.AccountBalance << endl;

}

bool isClientExist(string AccountNumber, string FileName) {

	vector <stClientData> vClients;
	fstream MyFile;
	MyFile.open(FileName, ios::in);//read Mode

	if (MyFile.is_open())
	{
		string Line;

		stClientData Client;

		while (getline(MyFile, Line))
		{
			Client = ConvarteLineDataToRecord(Line);

			if (Client.AccountNumber == AccountNumber)
			{
				MyFile.close();
				return true;
			}
			vClients.push_back(Client);
		}
		MyFile.close();
	}
	return false;
}

stClientData ReadClientDataCustom() {


	stClientData ClientData;


	ClientData.AccountNumber = ReadAccountNumber();

	while (isClientExist(ClientData.AccountNumber, ClientsFileName))
	{
		cout << "\nClient With Account Number (" << ClientData.AccountNumber << ") is Already Exist, Enter Another Account Number? ";

		ClientData.AccountNumber = ReadAccountNumber();



	}

	cout << "\nEnter PIN Code? ";
	//cin.ignore(1, '\n');
	getline(cin >> ws, ClientData.PINCode);
	cout << "\nEnter Name? ";
	//cin.ignore(1, '\n');
	getline(cin, ClientData.Name);
	cout << "\nEnter Phone? ";
	//cin.ignore(1, '\n');
	getline(cin, ClientData.Phone);
	cout << "\nEnter Account Balance? ";
	//cin.ignore(1, '\n');
	cin >> ClientData.AccountBalance;
	return ClientData;
}

void AddClientToFile(string FileName, string DataLine) {

	fstream MyFile;
	MyFile.open(FileName, ios::out | ios::app);

	if (MyFile.is_open())
	{
		MyFile << DataLine << endl;
	}
	MyFile.close();


}

void AddNewClient() {

	stClientData Data;
	Data = ReadClientDataCustom();
	AddClientToFile(ClientsFileName, ConvarteRecordToLine(Data));

}

void AddClients() {

	char Ask = 'y';

	do {
		cout << "\nAdding New Client:\n";
		AddNewClient();
