void ResetScreen() {

	system("cls");
	system("color 0F");


}

bool HasPermission(enMainMenuPermission Permission) {

	if (CurrentUser.Permission == enMainMenuPermission::pAll)
		return true;
	return (Permission & CurrentUser.Permission) == Permission;
}

