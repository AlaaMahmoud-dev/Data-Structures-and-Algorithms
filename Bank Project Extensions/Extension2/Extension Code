		ResetScreen();
		ShowUpdateUserChoice();
		GoBackToManageUsersMenu();
		break;
	case FindUser:
		ResetScreen();
		ShowFindUserChoice();
		GoBackToManageUsersMenu();
		break;
	case Mainmenu:
		ShowMainMenuScreen();
	}




}

