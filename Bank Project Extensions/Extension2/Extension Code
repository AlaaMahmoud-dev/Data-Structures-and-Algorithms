	cout << "                     Withdraw Screen                       \n";
	cout << "___________________________________________________________\n";
	cout << "-----------------------------------------------------------\n";

}

void WithdrawChoice() {

	ResetScreen();
	ShowWithdrawScreen();
	WithdrawAmmount();

}

void DepositChoice() {

	ResetScreen();
	ShowDepositScreen();
	DepositAmmount();
}

