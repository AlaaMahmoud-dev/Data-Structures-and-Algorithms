void Login() {

	ShowLoginScreen();

	vector<stUserData>vData = LoadUsersDataFromFile(UsersFileName);
	stUserData UserData;

	string Username = ReadUsername();
	string Password = ReadPassword();

	while (!FindUserByUsernameAndPassword(vData, UserData, Username, Password))
	{
		system("cls");
		ShowLoginScreen();
		cout << "\nInvalid Username/Password\n";
		Username = ReadUsername();
		Password = ReadPassword();
	}

	CurrentUser = UserData;

	ShowMainMenuScreen();

}

int main()
{

	

	Login();

}
